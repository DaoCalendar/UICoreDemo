<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrap_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.angcyo.widget.progress.ArcLoadingView
        android:id="@+id/arc_load_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/transparent40"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <com.angcyo.widget.progress.DslSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/lib_xxhdpi"
        android:paddingRight="@dimen/lib_xxhdpi"
        android:paddingBottom="10dp"
        app:progress_height="5dp"
        app:progress_show_text="true"
        app:seek_thumb_over_height="8dp" />

    <com.angcyo.widget.DslButton
        style="@style/DefaultButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="开始" />

</LinearLayout>