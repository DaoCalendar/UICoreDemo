<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_header_bg_shape"
    android:paddingLeft="@dimen/lib_xhdpi"
    android:paddingTop="@dimen/title_bar_height"
    android:paddingRight="@dimen/lib_xhdpi"
    android:paddingBottom="@dimen/lib_xhdpi">

    <com.angcyo.widget.image.ShapeImageView
        android:id="@+id/header_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:r_image_radius="@dimen/lib_radius_big"
        app:srcCompat="@drawable/face" />

    <com.angcyo.widget.text.DslTextView
        android:id="@+id/text_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/lib_hdpi"
        android:text="angcyo"
        android:textColor="@color/lib_white"
        app:layout_constraintBottom_toBottomOf="@id/header_view"
        app:layout_constraintLeft_toRightOf="@id/header_view"
        app:layout_constraintTop_toTopOf="@id/header_view" />

</androidx.constraintlayout.widget.ConstraintLayout>